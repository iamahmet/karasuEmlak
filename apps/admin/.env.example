# ============================================
# KARASU EMLAK - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your values
# cp .env.example .env.local

# ============================================
# SITE CONFIGURATION (Required)
# ============================================
NEXT_PUBLIC_SITE_URL=https://www.karasuemlak.net
NEXT_PUBLIC_ADMIN_URL=https://admin.karasuemlak.net

# ============================================
# SUPABASE CONFIGURATION (Required)
# ============================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anon Key (Public - Safe for client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_ANON_KEY=your-anon-key

# Supabase Service Role Key (Private - Server-side ONLY, never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Supabase JWT Secret (for auth verification)
SUPABASE_JWT_SECRET=your-jwt-secret

# ============================================
# SUPABASE DATABASE - Direct PostgreSQL Connection
# ============================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/database

SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-database-password

# ============================================
# CLOUDINARY - Image CDN (Required)
# ============================================
# Get these from: https://cloudinary.com/console

CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# AI SERVICES (Optional)
# ============================================
# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key

# Google Gemini - https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-key

# ============================================
# IMAGE SEARCH APIs (Optional)
# ============================================
UNSPLASH_ACCESS_KEY=your-unsplash-key
PEXELS_API_KEY=your-pexels-key
PIXABAY_API_KEY=your-pixabay-key
GOOGLE_CUSTOM_SEARCH_API_KEY=your-google-search-key
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your-search-engine-id

# ============================================
# EXTERNAL APIs (Optional)
# ============================================
OPENWEATHER_API_KEY=your-weather-key
OPENCAGE_API_KEY=your-geocoding-key
NEWSAPI_KEY=your-news-key
NUMVERIFY_API_KEY=your-phone-verify-key

# ============================================
# GOOGLE SERVICES (Optional)
# ============================================
GOOGLE_MAPS_API_KEY=your-maps-key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-maps-key
GOOGLE_SITE_VERIFICATION=your-site-verification

# For Google Search Console Indexing API
GOOGLE_SEARCH_CONSOLE_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SEARCH_CONSOLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# ============================================
# ANALYTICS & MONITORING (Optional)
# ============================================
NEXT_PUBLIC_GA4_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_CLARITY_ID=your-clarity-id
NEXT_PUBLIC_BING_VERIFICATION=your-bing-verification
NEXT_PUBLIC_YANDEX_VERIFICATION=your-yandex-verification

# ============================================
# CACHING (Optional)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# ERROR TRACKING (Optional)
# ============================================
SENTRY_DSN=https://your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-token

# ============================================
# EMAIL SERVICE (Optional)
# ============================================
RESEND_API_KEY=re_your-resend-key
RESEND_REPLY_TO=info@karasuemlak.net

# ============================================
# SECURITY (Optional)
# ============================================
CRON_SECRET=your-cron-secret
REVALIDATE_SECRET=your-revalidate-secret
